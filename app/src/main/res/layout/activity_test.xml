<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main_fragment.TestActivity">

    <TextView
        android:text="差分服务器"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/textview_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:elevation="4dp"
        android:layout_margin="5dp"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="20" /> <!-- 阴影模糊半径 -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:weightSum="2">
        <EditText
            android:id="@+id/CORSip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入IP地址"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            android:layout_weight="0.3"
            android:padding="12dp"
            android:ems="10" />

        <CheckBox
            android:id="@+id/RememberTheServerIP"
            android:textSize="16dp"
            android:text=""
            android:layout_weight="1.7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/CORSport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入端口号"
        android:inputType="number"
        android:padding="10dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:ems="10" />

    <EditText
        android:id="@+id/CORSAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入账号"
        android:inputType="text"
        android:padding="10dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:ems="10" />

    <EditText
        android:id="@+id/CORSPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入密码"
        android:inputType="text"
        android:padding="10dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:ems="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:weightSum="2">
        <Spinner
            android:id="@+id/CORSmount"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_weight="0.3"
            app:layout_constraintHorizontal_bias="0.018"/>

        <CheckBox
            android:id="@+id/RememberTheCORSInformation"
            android:textSize="16dp"
            android:text=""
            android:layout_weight="1.7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/SettingCORSInformationButton"
        android:text="设置CORS信息"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        style="@style/CustomMaterialButton"/>

    <Button
        android:id="@+id/ConnectCORSserverButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="连接CORS"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        style="@style/CustomMaterialButton"
        android:ems="10"/>


</LinearLayout>