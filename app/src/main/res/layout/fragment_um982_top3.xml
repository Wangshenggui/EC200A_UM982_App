<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="NMEA格式数据输出"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#50AAFF"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#d0d8d0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/DTMselectText"
                    android:text="GPDTM 坐标信息\n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textSize="18sp"
                    android:textColor="#FF333333"
                    android:ems="18"/>

                <CheckBox
                    android:id="@+id/DTMselectCheck"
                    android:layout_width="match_parent"
                    android:layout_height="28sp"
                    android:layout_weight="1.8"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/GBSselectText"
                    android:text="GPGBS 卫星故障检测\n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textSize="18sp"
                    android:textColor="#FF333333"
                    android:ems="18"/>

                <CheckBox
                    android:id="@+id/GBSselectCheck"
                    android:layout_width="match_parent"
                    android:layout_height="28sp"
                    android:layout_weight="1.8"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/GGAselectText"
                    android:text="GPGGA 卫星定位信息\n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textSize="18sp"
                    android:textColor="#FF333333"
                    android:ems="18"/>

                <CheckBox
                    android:id="@+id/GGAselectCheck"
                    android:layout_width="match_parent"
                    android:layout_height="28sp"
                    android:layout_weight="1.8"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
