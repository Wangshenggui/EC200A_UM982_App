<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EC200A_UM982_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EC200A_UM982_App" parent="Base.Theme.EC200A_UM982_App" />

    <!--自定义按钮-->
    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#FF1F80FF</item> <!-- 背景色 -->
        <item name="android:textColor">@android:color/white</item> <!-- 文字颜色 -->
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance</item> <!-- 圆角 -->
    </style>
    <style name="CustomMaterialButton_1" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#FF1FF0FF</item> <!-- 背景色 -->
        <item name="android:textColor">@android:color/white</item> <!-- 文字颜色 -->
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance</item> <!-- 圆角 -->
    </style>
    <style name="CustomShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>