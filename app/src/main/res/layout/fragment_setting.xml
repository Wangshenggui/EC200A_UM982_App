<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_fragment.SettingFragment"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- 大选项：更新 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/card_background"
            android:clickable="true"
            android:focusable="true"
            android:elevation="2dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更新"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_light"
                android:layout_marginBottom="4dp" />

            <!-- 版本更新 -->
            <LinearLayout
                android:id="@+id/account_settings_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/card_background"
                android:clickable="true"
                android:focusable="true"
                android:elevation="2dp"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/version_updatingicon"
                            android:paddingEnd="4dp"
                            android:contentDescription="@drawable/version_updatingicon" />

                        <TextView
                            android:id="@+id/notification_badge"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/red_circle_background"
                            android:text="1"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:layout_gravity="end|top" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/account_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="版本更新"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_blue_light"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="检查应用的最新版本和更新信息"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="2dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- 4G更新 -->
            <LinearLayout
                android:id="@+id/update_4gcode_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/card_background"
                android:clickable="true"
                android:focusable="true"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/module4g"
                            android:paddingEnd="4dp"
                            android:contentDescription="@drawable/module4g" />

                        <TextView
                            android:id="@+id/notification_badge1"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/red_circle_background"
                            android:text="1"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:layout_gravity="end|top" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4G代码更新"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_light"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="获取最新的4G模块更新信息"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="2dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
