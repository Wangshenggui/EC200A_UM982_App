            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/RMCHselectText"
                    android:text="GPRMCH 从天线卫星定位\n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textSize="18sp"
                    android:textColor="#FF333333"
                    android:ems="18"/>

                <CheckBox
                    android:id="@+id/RMCHselectCheck"
                    android:layout_width="match_parent"
                    android:layout_height="28sp"
                    android:layout_weight="1.8"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/ROTselectText"
                    android:text="GPROT 旋转速度和方向\n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
